<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE222222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/narrowBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A-"
            android:textSize="16dp"
            android:textColor="@drawable/content_text_selector_color"
            android:gravity="center"
            
            android:background="@drawable/rounded_rectangle_help_selector"/>
        <TextView
            android:id="@+id/fontSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="39"
            android:textSize="16dp"
            android:textColor="#AAAAAA"
            android:gravity="center" />
        <TextView
            android:id="@+id/enlargeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A+"
            android:textSize="16dp"
            android:textColor="@drawable/content_text_selector_color"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle_help_selector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/colorBtn_0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/p1_se"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/colorBtn_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/p2_se"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/colorBtn_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/p3_se"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/colorBtn_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/p4_se"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>